#include <stdio.h>
#include <stdlib.h>    
#include <string.h>

#define MAX_LIVROS 50
#define MAX_STRINGS 100

struct Livro {
    char nome[MAX_STRINGS];
    char autor[MAX_STRINGS];
    char editora[MAX_STRINGS];
    int edicao;
};

void limparBuffer() {
    int c;
    while ((c = getchar()) != '\n' && c != EOF);
}

int main(){
    struct Livro biblioteca[MAX_LIVROS];
    int totalLivros = 0;
    int opcao;

    do {
        printf("\nMenu:\n");
        printf("1. Adicionar Livro\n");
        printf("2. Listar Livros\n");
        printf("3. Sair\n");
        printf("Escolha uma opcao: ");
        scanf("%d", &opcao);
        limparBuffer();

        switch(opcao) {
            case 1:
                if (totalLivros < MAX_LIVROS) {
                    printf("Nome do Livro: ");
                    fgets(biblioteca[totalLivros].nome, MAX_STRINGS, stdin);
                    biblioteca[totalLivros].nome[strcspn(biblioteca[totalLivros].nome, "\n")] = 0;

                    printf("Autor: ");
                    fgets(biblioteca[totalLivros].autor, MAX_STRINGS, stdin);
                    biblioteca[totalLivros].autor[strcspn(biblioteca[totalLivros].autor, "\n")] = 0;

                    printf("Editora: ");
                    fgets(biblioteca[totalLivros].editora, MAX_STRINGS, stdin);
                    biblioteca[totalLivros].editora[strcspn(biblioteca[totalLivros].editora, "\n")] = 0;

                    printf("Edicao: ");
                    scanf("%d", &biblioteca[totalLivros].edicao);
                    limparBuffer();

                    totalLivros++;
                    printf("Livro adicionado com sucesso!\n");
                } else {
                    printf("Biblioteca cheia! Nao e possivel adicionar mais livros.\n");
                }
                break;

            case 2:
                if (totalLivros == 0) {
                    printf("Nenhum livro na biblioteca.\n");
                } else {
                    for (int i = 0; i < totalLivros; i++) {
                        printf("\nLivro %d:\n", i + 1);
                        printf("Nome: %s\n", biblioteca[i].nome);
                        printf("Autor: %s\n", biblioteca[i].autor);
                        printf("Editora: %s\n", biblioteca[i].editora);
                        printf("Edicao: %d\n", biblioteca[i].edicao);
                    }
                }
                break;

            case 3:
                printf("Saindo...\n");
                break;

            default:
                printf("Opcao invalida! Tente novamente.\n");
        }
    } while (opcao != 3);
    

}
